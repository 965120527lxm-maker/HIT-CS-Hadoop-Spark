<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <!-- HDFS main URI -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://master:9000</value>
    </property>

    <!-- Hadoop temporary directory -->
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/root/hdfs/tmp</value>
    </property>
</configuration>
